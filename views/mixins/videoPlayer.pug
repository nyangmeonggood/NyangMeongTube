mixin videoPlayer(video = {})
    .video_player#jsVideoPlayer
        video(src=`/${video.src}`)
        .video_player_controls
            .video_player_column
                input.video_player_volume#jsVolume(type="range",min="0",max="1", value="0.5",step="0.1")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00 
                    span / 
                    span#totalTime 00:00:00
            .video_player_column
                span#jsPlayButton
                    i.far.fa-play-circle
            .video_player_column
                span#jsFullScreen
                    i.fas.fa-expand